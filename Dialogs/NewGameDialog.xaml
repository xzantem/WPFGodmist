<Window x:Class="GodmistWPF.Dialogs.NewGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Game" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Create New Character" 
                   Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            
            <!-- Character Name -->
            <TextBlock Text="Character Name:" 
                       Style="{DynamicResource MaterialDesignBody1TextBlock}"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" 
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,20"
                     MaxLength="32"/>
            
            <!-- Character Class -->
            <TextBlock Text="Character Class:" 
                       Style="{DynamicResource MaterialDesignBody1TextBlock}"
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="ClassComboBox" 
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Margin="0,0,0,20">
                <ComboBoxItem Content="Warrior" Tag="Warrior"/>
                <ComboBoxItem Content="Scout" Tag="Scout"/>
                <ComboBoxItem Content="Sorcerer" Tag="Sorcerer"/>
                <ComboBoxItem Content="Paladin" Tag="Paladin"/>
            </ComboBox>
            
            <!-- Difficulty -->
            <TextBlock Text="Difficulty:" 
                       Style="{DynamicResource MaterialDesignBody1TextBlock}"
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="DifficultyComboBox" 
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Margin="0,0,0,20">
                <ComboBoxItem Content="Easy" Tag="Easy"/>
                <ComboBoxItem Content="Normal" Tag="Normal"/>
                <ComboBoxItem Content="Hard" Tag="Hard"/>
                <ComboBoxItem Content="Nightmare" Tag="Nightmare"/>
            </ComboBox>
            
            <!-- Class Description -->
            <TextBlock x:Name="ClassDescriptionText" 
                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"
                       Foreground="Gray"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="CreateButton" 
                    Content="Create Character" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 