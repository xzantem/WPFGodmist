<Window x:Class="GodmistWPF.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <TextBlock Text="Game Settings" 
                       Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center"/>
        </materialDesign:ColorZone>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0,20,0,0">
            
            <!-- Game Settings Tab -->
            <TabItem Header="Game Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        
                        <!-- Difficulty Settings -->
                        <materialDesign:Card Margin="0,0,0,20" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Difficulty Settings" 
                                           Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                           Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Game Difficulty:" 
                                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                           Margin="0,0,0,5"/>
                                
                                <ComboBox x:Name="DifficultyComboBox" 
                                          Style="{StaticResource MaterialDesignComboBox}"
                                          Margin="0,0,0,10"/>
                                
                                <TextBlock x:Name="DifficultyDescriptionText" 
                                           Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                           TextWrapping="Wrap" Margin="0,0,0,10"/>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <!-- Display Settings -->
                        <materialDesign:Card Margin="0,0,0,20" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Display Settings" 
                                           Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                           Margin="0,0,0,15"/>
                                
                                <CheckBox x:Name="FullscreenCheckBox" 
                                          Content="Fullscreen Mode" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <CheckBox x:Name="ShowTooltipsCheckBox" 
                                          Content="Show Tooltips" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <CheckBox x:Name="ShowAnimationsCheckBox" 
                                          Content="Show Animations" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <CheckBox x:Name="HighContrastCheckBox" 
                                          Content="High Contrast Mode" 
                                          Style="{StaticResource MaterialDesignCheckBox}"/>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <!-- Gameplay Settings -->
                        <materialDesign:Card Margin="0,0,0,20" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Gameplay Settings" 
                                           Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                           Margin="0,0,0,15"/>
                                
                                <CheckBox x:Name="AutoSaveCheckBox" 
                                          Content="Auto Save" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <CheckBox x:Name="ConfirmActionsCheckBox" 
                                          Content="Confirm Important Actions" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <CheckBox x:Name="ShowDamageNumbersCheckBox" 
                                          Content="Show Damage Numbers" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <CheckBox x:Name="ShowCombatLogCheckBox" 
                                          Content="Show Combat Log" 
                                          Style="{StaticResource MaterialDesignCheckBox}"/>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <!-- Sound Settings -->
                        <materialDesign:Card Margin="0,0,0,20" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Sound Settings" 
                                           Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                           Margin="0,0,0,15"/>
                                
                                <CheckBox x:Name="SoundEnabledCheckBox" 
                                          Content="Enable Sound Effects" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <CheckBox x:Name="MusicEnabledCheckBox" 
                                          Content="Enable Background Music" 
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Master Volume:" 
                                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                           Margin="0,10,0,5"/>
                                
                                <Slider x:Name="MasterVolumeSlider" 
                                        Minimum="0" Maximum="100" Value="50"
                                        Style="{StaticResource MaterialDesignSlider}"
                                        Margin="0,0,0,10"/>
                                
                                <TextBlock x:Name="VolumeText" 
                                           Text="50%" 
                                           Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- About Tab -->
            <TabItem Header="About">
                <StackPanel Margin="20">
                    <materialDesign:Card Padding="20">
                        <StackPanel>
                            <TextBlock Text="Godmist RPG" 
                                       Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Version 1.0" 
                                       Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            
                            <TextBlock Text="A WPF-based RPG game with turn-based combat, crafting, quests, and exploration." 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            
                            <Separator Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Features:" 
                                       Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="â€¢ Turn-based combat system" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                            <TextBlock Text="â€¢ Crafting and item management" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                            <TextBlock Text="â€¢ Quest system with multiple objectives" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                            <TextBlock Text="â€¢ Dungeon exploration and combat" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                            <TextBlock Text="â€¢ NPC interactions and town services" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                            <TextBlock Text="â€¢ Save/load system" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                            <TextBlock Text="â€¢ Multiple character classes" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                            <TextBlock Text="â€¢ Equipment and skill systems" 
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="20,0,0,5"/>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="SaveButton" 
                    Content="Save Settings" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 