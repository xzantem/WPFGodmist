<Window x:Class="GodmistWPF.Dialogs.UpgradeItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Upgrade Item" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Upgrade Item" 
                   Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>
        
        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Item:" 
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding ItemName}"
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Current Modifier:" 
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding CurrentModifier, StringFormat={}{0:F1}}"
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="New Modifier:" 
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           VerticalAlignment="Center"/>
                <Slider Grid.Column="1" 
                        Value="{Binding NewModifier, Mode=TwoWay}"
                        Minimum="0.01"
                        Maximum="0.6"
                        TickFrequency="0.01"
                        IsSnapToTickEnabled="True"
                        AutoToolTipPlacement="TopLeft"
                        AutoToolTipPrecision="1"
                        Margin="0,10,0,0"/>
            </Grid>
            
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Success Chance:" 
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           VerticalAlignment="Center"/>
                <Slider Grid.Column="1" 
                        Value="{Binding SuccessChance, Mode=TwoWay}"
                        Minimum="0.01"
                        Maximum="1"
                        TickFrequency="0.01"
                        IsSnapToTickEnabled="True"
                        AutoToolTipPlacement="TopLeft"
                        AutoToolTipPrecision="1"
                        Margin="0,10,0,0"/>
            </Grid>
            
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Upgrade Cost:" 
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           FontWeight="Bold"/>
                <TextBlock Grid.Row="1"
                           Text="{Binding UpgradeCost, StringFormat={}{0:N0} Gold}"
                           Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           Margin="0,5,0,0"/>
            </Grid>
            
            <TextBlock Text="{Binding StatusMessage}"
                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                       Foreground="{DynamicResource ErrorBrush}"
                       TextWrapping="Wrap"
                       Margin="0,15,0,0"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Content="CANCEL"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="UPGRADE"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    IsDefault="True"
                    IsEnabled="{Binding CanAffordUpgrade}"
                    Click="UpgradeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
