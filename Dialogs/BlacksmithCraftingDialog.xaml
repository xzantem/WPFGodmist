<Window x:Class="GodmistWPF.Dialogs.BlacksmithCraftingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Blacksmith's Forge" Height="800" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Purple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Button Styles -->
            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Margin" Value="8,4"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Custom styles -->
            <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                <Setter Property="Margin" Value="0,0,0,16"/>
            </Style>
            
            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                <Setter Property="Margin" Value="0,0,0,16"/>
            </Style>
            
            <Style TargetType="TabControl" BasedOn="{StaticResource MaterialDesignTabControl}">
                <Setter Property="Margin" Value="0,0,0,16"/>
            </Style>
            
            <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
                <Setter Property="Padding" Value="16,8"/>
            </Style>
            
            <Style TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignRadioButton}">
                <Setter Property="Margin" Value="0,4"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Blacksmith's Forge" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,8"/>

        <!-- Parts Selection -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,16" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <materialDesign:ColorZone Mode="PrimaryMid" Padding="16,8">
                    <TextBlock Text="Parts Selection" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                </materialDesign:ColorZone>
                
                <TabControl x:Name="PartsTabControl" Grid.Row="1" Margin="16">
                    <TabItem x:Name="WeaponPartsTab" Header="Weapon" IsSelected="True">
                        <StackPanel Margin="0,8">
                            <ComboBox x:Name="WeaponHeadCombo" 
                                     materialDesign:HintAssist.Hint="Weapon Head"
                                     DisplayMemberPath="Name" 
                                     SelectionChanged="WeaponPart_SelectionChanged">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <ComboBox x:Name="WeaponBinderCombo" 
                                     materialDesign:HintAssist.Hint="Weapon Binder"
                                     DisplayMemberPath="Name" 
                                     SelectionChanged="WeaponPart_SelectionChanged">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <ComboBox x:Name="WeaponHandleCombo" 
                                     materialDesign:HintAssist.Hint="Weapon Handle"
                                     DisplayMemberPath="Name" 
                                     SelectionChanged="WeaponPart_SelectionChanged">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                        </StackPanel>
                    </TabItem>
                    <TabItem x:Name="ArmorPartsTab" Header="Armor" IsEnabled="True">
                        <StackPanel Margin="0,8">
                            <ComboBox x:Name="ArmorPlateCombo" 
                                     materialDesign:HintAssist.Hint="Armor Plate"
                                     DisplayMemberPath="Name" 
                                     SelectionChanged="ArmorPart_SelectionChanged">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <ComboBox x:Name="ArmorBinderCombo" 
                                     materialDesign:HintAssist.Hint="Armor Binder"
                                     DisplayMemberPath="Name" 
                                     SelectionChanged="ArmorPart_SelectionChanged">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <ComboBox x:Name="ArmorBaseCombo" 
                                     materialDesign:HintAssist.Hint="Armor Base"
                                     DisplayMemberPath="Name" 
                                     SelectionChanged="ArmorPart_SelectionChanged">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </materialDesign:Card>

        <!-- Quality and Item Name in same row -->
        <materialDesign:Card Grid.Row="3" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Quality Selection -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Quality" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="WeakQualityRadio" 
                                   Content="Weak" 
                                   GroupName="Quality" 
                                   Margin="0,0,8,0"/>
                        <RadioButton x:Name="NormalQualityRadio" 
                                   Content="Normal" 
                                   GroupName="Quality" 
                                   IsChecked="True"
                                   Margin="0,0,8,0"/>
                        <RadioButton x:Name="ExcellentQualityRadio" 
                                   Content="Excellent" 
                                   GroupName="Quality"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Item Naming -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Item Name" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="ItemNameTextBox" 
                             Text="Custom Item"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Enter item name"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Stats Display -->
        <materialDesign:Card Grid.Row="4" Margin="0,0,300,16" Padding="16">
            <StackPanel>
                <TextBlock Text="Item Stats" 
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0,0,0,8"/>
                <StackPanel x:Name="StatsPanel" Orientation="Vertical" Margin="8,0,0,0">
                    <TextBlock x:Name="DamageText" Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="AttackSpeedText" Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="CriticalChanceText" Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="RequiredLevelText" Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="ValueText" Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="0,0,0,4"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- Status Text and Craft Button -->
        <Grid Grid.Row="5" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Status Text -->
            <TextBlock x:Name="StatusText" 
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                       TextWrapping="Wrap"/>
            
            <!-- Craft Button -->
            <Button x:Name="CraftButton" 
                    Grid.Column="1"
                    Content="CRAFT ITEM" 
                    Click="CraftButton_Click"
                    Style="{StaticResource GameButtonStyle}"
                    Width="250"
                    Height="100"
                    HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
    </Grid>
</Window>
