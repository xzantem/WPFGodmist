<Window x:Class="GodmistWPF.Dialogs.CraftingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crafting Workshop" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Crafting Workshop" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock x:Name="PlayerGold" Text="Gold: 100" Foreground="Gold" FontSize="14" Margin="20,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Crafting Categories -->
            <Border Grid.Column="0" Background="#34495E" Margin="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Crafting Categories" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Button x:Name="WeaponCraftingButton" Content="Weapon Crafting" Background="#E74C3C" Foreground="White" 
                            Padding="10,8" Margin="0,0,0,5" Click="WeaponCraftingButton_Click"/>
                    <Button x:Name="ArmorCraftingButton" Content="Armor Crafting" Background="#3498DB" Foreground="White" 
                            Padding="10,8" Margin="0,0,0,5" Click="ArmorCraftingButton_Click"/>
                    <Button x:Name="PotionCraftingButton" Content="Potion Crafting" Background="#27AE60" Foreground="White" 
                            Padding="10,8" Margin="0,0,0,5" Click="PotionCraftingButton_Click"/>
                    <Button x:Name="GalduriteCraftingButton" Content="Galdurite Crafting" Background="#9B59B6" Foreground="White" 
                            Padding="10,8" Margin="0,0,0,5" Click="GalduriteCraftingButton_Click"/>
                    <Button x:Name="GeneralCraftingButton" Content="General Crafting" Background="#F39C12" Foreground="White" 
                            Padding="10,8" Margin="0,0,0,5" Click="GeneralCraftingButton_Click"/>
                    
                    <Separator Margin="0,15,0,15" Background="Gray"/>
                    
                    <TextBlock Text="Player Inventory" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox x:Name="InventoryList" Height="300" Background="#2C3E50" Foreground="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Key.Name}" Foreground="White"/>
                                    <TextBlock Text=" x" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Value}" Foreground="LightBlue"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
            
            <!-- Crafting Area -->
            <Border Grid.Column="1" Background="#2C3E50" Margin="5" Padding="10">
                <Grid x:Name="CraftingArea">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Weapon Crafting -->
                    <Grid x:Name="WeaponCraftingGrid" Grid.Row="1" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Weapon Head -->
                        <Border Grid.Column="0" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Weapon Head" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="WeaponHeadCombo" Background="#2C3E50" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="WeaponHeadInfo" Text="Select a weapon head" Foreground="LightGray" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Weapon Binder -->
                        <Border Grid.Column="1" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Weapon Binder" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="WeaponBinderCombo" Background="#2C3E50" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="WeaponBinderInfo" Text="Select a weapon binder" Foreground="LightGray" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Weapon Handle -->
                        <Border Grid.Column="2" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Weapon Handle" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="WeaponHandleCombo" Background="#2C3E50" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="WeaponHandleInfo" Text="Select a weapon handle" Foreground="LightGray" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Armor Crafting -->
                    <Grid x:Name="ArmorCraftingGrid" Grid.Row="1" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Armor Plate -->
                        <Border Grid.Column="0" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Armor Plate" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="ArmorPlateCombo" Background="#2C3E50" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="ArmorPlateInfo" Text="Select an armor plate" Foreground="LightGray" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Armor Binder -->
                        <Border Grid.Column="1" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Armor Binder" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="ArmorBinderCombo" Background="#2C3E50" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="ArmorBinderInfo" Text="Select an armor binder" Foreground="LightGray" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Armor Base -->
                        <Border Grid.Column="2" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Armor Base" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="ArmorBaseCombo" Background="#2C3E50" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="ArmorBaseInfo" Text="Select an armor base" Foreground="LightGray" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Potion Crafting -->
                    <Grid x:Name="PotionCraftingGrid" Grid.Row="1" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Potion Components -->
                        <Border Grid.Column="0" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Potion Components" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ListBox x:Name="PotionComponentsList" Height="200" Background="#2C3E50" Foreground="White">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" Foreground="White"/>
                                                <TextBlock Text=" - " Foreground="Gray"/>
                                                <TextBlock Text="{Binding Effect}" Foreground="LightGreen"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button x:Name="AddComponentButton" Content="Add Component" Background="#27AE60" Foreground="White" 
                                        Padding="10,5" Margin="0,10,0,0" Click="AddComponentButton_Click"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Potion Catalyst -->
                        <Border Grid.Column="1" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Potion Catalyst" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ComboBox x:Name="PotionCatalystCombo" Background="#2C3E50" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock x:Name="PotionCatalystInfo" Text="Select a catalyst" Foreground="LightGray" TextWrapping="Wrap"/>
                                
                                <TextBlock Text="Selected Components:" Foreground="White" FontSize="12" FontWeight="Bold" Margin="0,15,0,5"/>
                                <ListBox x:Name="SelectedComponentsList" Height="100" Background="#2C3E50" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Galdurite Crafting -->
                    <Grid x:Name="GalduriteCraftingGrid" Grid.Row="1" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Galdurite Components -->
                        <Border Grid.Column="0" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Galdurite Components" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ListBox x:Name="GalduriteComponentsList" Height="200" Background="#2C3E50" Foreground="White">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" Foreground="White"/>
                                                <TextBlock Text=" - " Foreground="Gray"/>
                                                <TextBlock Text="{Binding Effect}" Foreground="LightGreen"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button x:Name="AddGalduriteComponentButton" Content="Add Component" Background="#9B59B6" Foreground="White" 
                                        Padding="10,5" Margin="0,10,0,0" Click="AddGalduriteComponentButton_Click"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Galdurite Preview -->
                        <Border Grid.Column="1" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Galdurite Preview" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="GalduritePreview" Text="Select components to preview" Foreground="LightGray" TextWrapping="Wrap"/>
                                
                                <TextBlock Text="Selected Components:" Foreground="White" FontSize="12" FontWeight="Bold" Margin="0,15,0,5"/>
                                <ListBox x:Name="SelectedGalduriteComponentsList" Height="100" Background="#2C3E50" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- General Crafting -->
                    <Grid x:Name="GeneralCraftingGrid" Grid.Row="1" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Craftable Items -->
                        <Border Grid.Column="0" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Craftable Items" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ListBox x:Name="CraftableItemsList" Height="300" Background="#2C3E50" Foreground="White">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" Foreground="White"/>
                                                <TextBlock Text=" - " Foreground="Gray"/>
                                                <TextBlock Text="{Binding Rarity}" Foreground="LightBlue"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                        
                        <!-- Recipe Details -->
                        <Border Grid.Column="1" Background="#34495E" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Recipe Details" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="RecipeDetails" Text="Select an item to view recipe" Foreground="LightGray" TextWrapping="Wrap"/>
                                
                                <Button x:Name="CraftItemButton" Content="Craft Item" Background="#F39C12" Foreground="White" 
                                        Padding="10,5" Margin="0,15,0,0" Click="CraftItemButton_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Quality Selection -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Quality:" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="QualityCombo" Background="#2C3E50" Foreground="White" Width="150" Margin="0,0,10,0"/>
                        <TextBlock x:Name="QualityInfo" Text="" Foreground="LightGray" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Craft Button -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="CraftButton" Content="Craft Item" Background="#27AE60" Foreground="White" 
                                Padding="15,8" Margin="0,0,10,0" Click="CraftButton_Click"/>
                        <Button x:Name="CancelButton" Content="Cancel" Background="#E74C3C" Foreground="White" 
                                Padding="15,8" Click="CancelButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="10">
            <TextBlock x:Name="StatusText" Text="Ready to craft" Foreground="White" FontSize="12"/>
        </Border>
    </Grid>
</Window> 