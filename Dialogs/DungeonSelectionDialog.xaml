<Window x:Class="GodmistWPF.Dialogs.DungeonSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GodmistWPF.Dialogs"
        xmlns:enums="clr-namespace:GodmistWPF.Enums.Dungeons"
        mc:Ignorable="d"
        Title="Start Expedition" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Start Expedition" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"
                      HorizontalAlignment="Center"/>
            
            <TextBlock Text="Select Dungeon Type:" 
                      Margin="0,0,0,5"
                      FontSize="14"/>
            
            <ComboBox x:Name="DungeonTypeComboBox" 
                     DisplayMemberPath="Value" 
                     SelectedValuePath="Key"
                     Margin="0,0,0,20"
                     Height="30"
                     SelectionChanged="DungeonTypeComboBox_SelectionChanged"/>
            
            <TextBlock Text="Dungeon Level:" 
                      Margin="0,0,0,5"
                      FontSize="14"/>
            
            <StackPanel Orientation="Horizontal" 
                       Margin="0,0,0,20" 
                       VerticalAlignment="Center">
                <TextBlock x:Name="DungeonLevelText" 
                          Text="1" 
                          Width="30" 
                          TextAlignment="Right" 
                          Margin="0,0,10,0"/>
                <Slider x:Name="DungeonLevelSlider" 
                        Minimum="1" 
                        Maximum="50" 
                        Value="1" 
                        Width="250"
                        Margin="0,0,10,0"
                        ValueChanged="DungeonLevelSlider_ValueChanged"/>
                <TextBlock Text="50" 
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <Border BorderThickness="1" 
                    BorderBrush="#444" 
                    CornerRadius="4" 
                    Padding="10"
                    Margin="0,0,0,20"
                    Background="#1E1E1E">
                <TextBlock x:Name="DungeonDescriptionText" 
                         Text="Select a dungeon type to see its description" 
                         TextWrapping="Wrap" 
                         MinHeight="60"/>
            </Border>
            
            <Button x:Name="StartButton" 
                    Content="Enter Dungeon" 
                    Click="StartButton_Click"
                    Padding="10,5"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    MinWidth="120"/>
        </StackPanel>
    </Grid>
</Window>
