<Window x:Class="GodmistWPF.Dialogs.InventoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Inventory" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Inventory" 
                   Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Inventory Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            
            <!-- Items List -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Your Items" 
                               Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,10"/>
                    
                    <ListBox x:Name="InventoryListBox" 
                             Style="{StaticResource MaterialDesignListBox}"
                             MaxHeight="400"
                             DisplayMemberPath="DisplayName"/>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
                <Button Content="Use" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="UseButton_Click"
                        Margin="0,0,0,10"/>
                <Button Content="Drop" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="DropButton_Click"/>
            </StackPanel>
            
            <!-- Item Info -->
            <materialDesign:Card Grid.Column="2" Margin="10,0,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Item Information" 
                               Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="ItemInfoText" 
                               Text="Select an item to see its information." 
                               Style="{DynamicResource MaterialDesignBody2TextBlock}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 