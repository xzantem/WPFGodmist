<Window x:Class="GodmistWPF.Dialogs.BattleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:GodmistWPF.Converters"
        Title="Battle" 
        Height="900" 
        Width="1200" 
        MinWidth="1000"
        MinHeight="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Closing="Window_Closing"
        WindowStyle="ToolWindow">
    
    <Window.Resources>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        
        <!-- Progress Bar Style -->
        <Style x:Key="ResourceBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555"/>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>
        
        <!-- Card Style for Skills/Items -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#3E5771"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Turn Indicator Style -->
        <Style x:Key="TurnIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#1E2B38">
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Battle Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="BATTLE" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Foreground="White"/>
                    <TextBlock x:Name="TurnCounter" 
                               Text=" - Turn 1" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Foreground="LightGray"
                               Margin="10,0,0,0"/>
                    <TextBlock x:Name="BattleStatus" 
                               Text="Player's Turn" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Foreground="LightGreen"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <!-- Turn Order Indicator -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <TextBlock Text="TURN ORDER: " 
                               VerticalAlignment="Center"
                               Foreground="LightGray"/>
                    <ItemsControl x:Name="TurnOrderIndicators" 
                                 VerticalAlignment="Center"
                                 ItemsSource="{Binding TurnOrderIndicatorsCollection}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Ellipse ToolTip="{Binding Name}"
                                         Width="15" Height="15" 
                                         Margin="2">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="{Binding IsPlayer, Converter={StaticResource BooleanToBrushConverter}, ConverterParameter='#4CAF50|#F44336'}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="10" Color="White" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Player Panel -->
            <Border Grid.Column="0" 
                    Background="#263846" 
                    CornerRadius="4" 
                    Padding="10"
                    Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Character Info -->
                    <StackPanel Grid.Row="0">
                        <TextBlock x:Name="PlayerName" 
                                   Text="Player Name" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Foreground="White"/>
                        
                        <!-- HP Bar -->
                        <TextBlock Text="HEALTH" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="#FF6B6B"/>
                        <Grid>
                            <ProgressBar x:Name="PlayerHealthBar" 
                                         Style="{StaticResource ResourceBarStyle}"
                                         Foreground="#FF6B6B"/>
                            <TextBlock x:Name="PlayerHealthText" 
                                       Text="100/100" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </Grid>
                        
                        <!-- Resource Bar (MP/RP/SP) -->
                        <TextBlock x:Name="PlayerResourceLabel" 
                                   Text="MANA" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="#4FC3F7"/>
                        <Grid>
                            <ProgressBar x:Name="PlayerResourceBar" 
                                         Style="{StaticResource ResourceBarStyle}"
                                         Foreground="#4FC3F7"/>
                            <TextBlock x:Name="PlayerResourceText" 
                                       Text="50/50" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </Grid>
                        
                        <!-- Action Points with wrapping -->
                        <TextBlock Text="ACTION POINTS" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="#BA68C8"
                                   Margin="0,5,0,0"/>
                        <TextBlock x:Name="PlayerActionPointsText" 
                                   Text="●●●●●" 
                                   Foreground="#BA68C8"
                                   FontSize="24"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="PlayerActionPointsCount" 
                                       Text=" (5/5)" 
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    
                    <!-- Skills Placeholder - Moved to left action menu -->
                    <StackPanel Grid.Row="1" Margin="0,15,0,0">
                        <TextBlock Text="ACTIONS" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Vertical" Margin="10">
                <!-- Main Action Buttons -->
                <Button x:Name="SkillsButton" 
                        Content="SKILLS" 
                        Style="{StaticResource ActionButtonStyle}"
                        Click="SkillsButton_Click"
                        Margin="0,5"/>
                        
                <Button x:Name="ItemsButton" 
                        Content="ITEMS" 
                        Style="{StaticResource ActionButtonStyle}"
                        Click="ItemsButton_Click"
                        Margin="0,5"/>
                        
                <Button x:Name="EndTurnButton" 
                        Content="END TURN" 
                        Style="{StaticResource ActionButtonStyle}"
                        Click="EndTurnButton_Click"
                        Margin="0,5"/>
                        
                <Button x:Name="EscapeButton" 
                        Content="ESCAPE" 
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#F44336"
                        Click="EscapeButton_Click"
                        Margin="0,5"/>
                
                <!-- Skills Panel (initially hidden) -->
                <Border x:Name="SkillsPanel" 
                        Style="{StaticResource CardStyle}"
                        Visibility="Collapsed"
                        Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Select Skill" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                                    
                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto"
                                    MaxHeight="500"
                                    Margin="0,5,0,5">
                            <ItemsControl x:Name="SkillsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                ToolTip="{Binding Description}"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Left"
                                                Padding="10,8"
                                                Margin="0,2"
                                                Click="SkillButton_Click"
                                                MouseEnter="SkillButton_MouseEnter"
                                                MouseLeave="SkillButton_MouseLeave"
                                                Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3E5771"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <Button Grid.Row="2"
                                Content="Back" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                Margin="0,5,0,0"
                                Padding="10,5"
                                Click="BackButton_Click"/>
                    </Grid>
                </Border>
                
                <!-- Items Panel (initially hidden) -->
                <Border x:Name="ItemsPanel" 
                        Style="{StaticResource CardStyle}"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Select Item" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="ItemsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                ToolTip="{Binding Description}"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Foreground="White"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Left"
                                                Margin="0,2"
                                                MouseEnter="ItemButton_MouseEnter"
                                                MouseLeave="ItemButton_MouseLeave"
                                                Click="ItemButton_Click"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <Button Content="Back" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Foreground="White"
                                Margin="0,10,0,0"
                                Click="BackButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Battle Log -->
            <Border Grid.Column="1" 
                    Background="#263846" 
                    CornerRadius="4" 
                    Padding="10"
                    Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="BATTLE LOG" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    
                    <Border Grid.Row="1" 
                            Background="#1E2B38" 
                            CornerRadius="2"
                            Padding="5">
                        <ScrollViewer x:Name="BattleLogScroll" 
                                      VerticalScrollBarVisibility="Auto">
                            <FlowDocumentScrollViewer x:Name="BattleLog" 
                                       Foreground="#DDD"
                                       FontFamily="Consolas"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Enemy Panel -->
            <Border Grid.Column="2" 
                    Background="#263846" 
                    CornerRadius="4" 
                    Padding="10"
                    Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Enemy Info -->
                    <StackPanel Grid.Row="0">
                        <TextBlock x:Name="EnemyName" 
                                   Text="Enemy Name" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Foreground="White"/>
                        
                        <!-- HP Bar -->
                        <TextBlock Text="HEALTH" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="#FF6B6B"/>
                        <Grid>
                            <ProgressBar x:Name="EnemyHealthBar" 
                                         Style="{StaticResource ResourceBarStyle}"
                                         Foreground="#FF6B6B"/>
                            <TextBlock x:Name="EnemyHealthText" 
                                       Text="100/100" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </Grid>
                        
                        <!-- Resource Bar (MP/RP/SP) -->
                        <TextBlock x:Name="EnemyResourceLabel" 
                                   Text="MANA" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="#4FC3F7"/>
                        <Grid>
                            <ProgressBar x:Name="EnemyResourceBar" 
                                         Style="{StaticResource ResourceBarStyle}"
                                         Foreground="#4FC3F7"/>
                            <TextBlock x:Name="EnemyResourceText" 
                                       Text="50/50" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Hover Info Panel -->
                    <StackPanel Grid.Row="1" Margin="0,15,0,0">
                        <TextBlock x:Name="HoverInfoTitle"
                                   Text="ITEM INFO" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <Border Background="#263846" 
                                CornerRadius="4" 
                                Padding="15"
                                BorderThickness="1"
                                BorderBrush="#3E5771"
                                Height="Auto">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="HoverInfoText" 
                                           Foreground="#DDD"
                                           TextWrapping="Wrap"
                                           TextAlignment="Left"
                                           FontSize="14"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        
        <!-- Rewards Panel -->
        <Border x:Name="RewardsPanel" 
                Grid.Row="0" Grid.RowSpan="3"
                Panel.ZIndex="1000"
                Background="#80000000" 
                Visibility="Collapsed">
            <Border Width="400" 
                    Height="300" 
                    Background="#2C3E50" 
                    CornerRadius="8"
                    Padding="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="BATTLE REWARDS" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <StackPanel x:Name="RewardsList" Margin="0,0,0,20">
                        <!-- Rewards will be added here programmatically -->
                    </StackPanel>
                    
                    <Button x:Name="CloseRewardsButton"
                            Content="CONTINUE"
                            Style="{StaticResource ActionButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="CloseRewardsButton_Click"/>
                </StackPanel>
            </Border>
        </Border>
        
        <!-- Battle Result Overlay -->
        <Border x:Name="ResultOverlay" 
                Grid.RowSpan="3" 
                Background="#801E2B38" 
                Visibility="Collapsed"
                Panel.ZIndex="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="BattleResult" 
                           Text="VICTORY!" 
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                           Foreground="#4CAF50"
                           HorizontalAlignment="Center"/>
                <Button x:Name="CloseButton" 
                        Content="CONTINUE" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Padding="20,5"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>