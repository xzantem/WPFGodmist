<Window x:Class="GodmistWPF.Dialogs.BattleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Battle Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="BattleTitle" Text="Battle in Progress" 
                           Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock x:Name="TurnCounter" Text="Turn: 1" 
                           Foreground="White" FontSize="14" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="BattleStatus" Text="Player's Turn" 
                           Foreground="LightGreen" FontSize="14" Margin="20,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Battle Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Player Character Info -->
            <Border Grid.Column="0" Background="#34495E" Margin="5" Padding="10">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Player Character" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <!-- Character Stats -->
                        <Border Background="#2C3E50" Padding="8" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock x:Name="PlayerName" Text="Name" Foreground="White" FontWeight="Bold"/>
                                <TextBlock x:Name="PlayerLevel" Text="Level: 1" Foreground="LightBlue"/>
                                <TextBlock x:Name="PlayerHealth" Text="HP: 100/100" Foreground="LightGreen"/>
                                <TextBlock x:Name="PlayerResource" Text="MP: 50/50" Foreground="LightCyan"/>
                                <TextBlock x:Name="PlayerAttack" Text="Attack: 10-15" Foreground="Orange"/>
                                <TextBlock x:Name="PlayerDefense" Text="Defense: 5/5" Foreground="LightGray"/>
                                <TextBlock x:Name="PlayerSpeed" Text="Speed: 10" Foreground="Yellow"/>
                                <TextBlock x:Name="PlayerActionPoints" Text="AP: 5/5" Foreground="Pink"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Skills -->
                        <TextBlock Text="Skills" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListBox x:Name="SkillsList" Height="200" Background="#2C3E50" Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Foreground="White"/>
                                        <TextBlock Text=" - " Foreground="Gray"/>
                                        <TextBlock Text="{Binding ResourceCost}" Foreground="LightCyan"/>
                                        <TextBlock Text=" MP, " Foreground="Gray"/>
                                        <TextBlock Text="{Binding ActionCost}" Foreground="Pink"/>
                                        <TextBlock Text=" AP" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Items -->
                        <TextBlock Text="Usable Items" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,10,0,5"/>
                        <ListBox x:Name="ItemsList" Height="100" Background="#2C3E50" Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Foreground="White"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Battle Log -->
            <Border Grid.Column="1" Background="#2C3E50" Margin="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Battle Log" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <ScrollViewer Grid.Row="1" x:Name="BattleLogScroll">
                        <TextBlock x:Name="BattleLog" Foreground="White" TextWrapping="Wrap" FontFamily="Consolas"/>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Enemy Character Info -->
            <Border Grid.Column="2" Background="#34495E" Margin="5" Padding="10">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Enemy Character" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <!-- Enemy Stats -->
                        <Border Background="#2C3E50" Padding="8" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock x:Name="EnemyName" Text="Name" Foreground="White" FontWeight="Bold"/>
                                <TextBlock x:Name="EnemyLevel" Text="Level: 1" Foreground="LightBlue"/>
                                <TextBlock x:Name="EnemyHealth" Text="HP: 100/100" Foreground="LightGreen"/>
                                <TextBlock x:Name="EnemyResource" Text="MP: 50/50" Foreground="LightCyan"/>
                                <TextBlock x:Name="EnemyAttack" Text="Attack: 10-15" Foreground="Orange"/>
                                <TextBlock x:Name="EnemyDefense" Text="Defense: 5/5" Foreground="LightGray"/>
                                <TextBlock x:Name="EnemySpeed" Text="Speed: 10" Foreground="Yellow"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Turn Order -->
                        <TextBlock Text="Turn Order" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListBox x:Name="TurnOrderList" Height="150" Background="#2C3E50" Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="White"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Battle Controls -->
                        <StackPanel Margin="0,10,0,0">
                            <Button x:Name="UseSkillButton" Content="Use Skill" Background="#27AE60" Foreground="White" 
                                    Padding="10,5" Margin="0,0,0,5" Click="UseSkillButton_Click"/>
                            <Button x:Name="UseItemButton" Content="Use Item" Background="#E67E22" Foreground="White" 
                                    Padding="10,5" Margin="0,0,0,5" Click="UseItemButton_Click"/>
                            <Button x:Name="EndTurnButton" Content="End Turn" Background="#E74C3C" Foreground="White" 
                                    Padding="10,5" Margin="0,0,0,5" Click="EndTurnButton_Click"/>
                            <Button x:Name="EscapeButton" Content="Try to Escape" Background="#9B59B6" Foreground="White" 
                                    Padding="10,5" Click="EscapeButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Battle Actions -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="AutoBattleButton" Content="Auto Battle" Background="#3498DB" Foreground="White" 
                        Padding="15,8" Margin="0,0,10,0" Click="AutoBattleButton_Click"/>
                <Button x:Name="SurrenderButton" Content="Surrender" Background="#E74C3C" Foreground="White" 
                        Padding="15,8" Margin="0,0,10,0" Click="SurrenderButton_Click"/>
                <TextBlock x:Name="BattleResult" Text="" Foreground="White" FontSize="16" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 