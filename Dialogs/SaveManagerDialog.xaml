<Window x:Class="GodmistWPF.Dialogs.SaveManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Save Management" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <TextBlock Text="Save Management" 
                       Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center"/>
        </materialDesign:ColorZone>
        <!-- Save Files List -->
        <materialDesign:Card Grid.Row="1" Padding="15">
            <StackPanel>
                <TextBlock Text="Available Save Files:" 
                           Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                           Margin="0,0,0,15"/>
                <ListBox x:Name="SaveFilesListBox" 
                         Style="{StaticResource MaterialDesignListBox}"
                         MaxHeight="300"
                         SelectionChanged="SaveFilesListBox_SelectionChanged"/>
                <TextBlock x:Name="SaveFileInfoText" 
                           Style="{DynamicResource MaterialDesignBody2TextBlock}"
                           TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </materialDesign:Card>
        <!-- Save Management Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="LoadSaveButton" 
                    Content="Load Save" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="LoadSaveButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="DeleteSaveButton" 
                    Content="Delete Save" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="DeleteSaveButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="CreateSaveButton" 
                    Content="Create New Save" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="CreateSaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 