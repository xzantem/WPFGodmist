<Window x:Class="GodmistWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:GodmistWPF.Controls"
        Title="Godmist - RPG Adventure" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Game Button Style -->
        <Style x:Key="GameButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="MinHeight" Value="45"/>
        </Style>
        
        <!-- Game Text Block Style -->
        <Style x:Key="GameTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>
        
        <!-- Game List Box Style -->
        <Style x:Key="GameListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    
    <materialDesign:DialogHost x:Name="RootDialog" Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </materialDesign:ColorZone>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Main Menu View -->
            <Grid x:Name="MainMenuView" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Title Section -->
                <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="GODMIST" 
                               Style="{DynamicResource MaterialDesignHeadline1TextBlock}"
                               HorizontalAlignment="Center"
                               Foreground="Purple"/>
                </StackPanel>
                
                <!-- Menu Buttons -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="NewGameButton" 
                            Content="New Game" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="NewGameButton_Click"/>
                    <Button x:Name="LoadGameButton" 
                            Content="Load Game" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="LoadGameButton_Click"/>
                    <Button x:Name="LanguageButton" 
                            Content="Language" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="LanguageButton_Click"/>
                    <Button x:Name="ExitButton" 
                            Content="Exit" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="ExitButton_Click"/>
                </StackPanel>
                
                <!-- Footer -->
                <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Version 1.0" 
                               Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- Town View (integrated from TownDialog) -->
            <Grid x:Name="TownView" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header -->
                <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="TownNameText" Text="Arungard" Style="{DynamicResource MaterialDesignHeadline4TextBlock}" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>
                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <!-- Left Panel: Town Services -->
                    <materialDesign:Card Grid.Column="0" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Actions" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>
                            <Button x:Name="StartExpeditionButton" Content="🏰 Start Expedition" Style="{StaticResource MaterialDesignRaisedButton}" Click="StartExpeditionButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="QuestLogButton" Content="📜 Quest Log" Style="{StaticResource MaterialDesignRaisedButton}" Click="QuestLogButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="InventoryButton_Town" Content="🎒 Inventory" Style="{StaticResource MaterialDesignRaisedButton}" Click="InventoryButton_Town_Click" Margin="0,0,0,10"/>
                            <Button x:Name="CharacterButton" Content="👤 Character" Style="{StaticResource MaterialDesignRaisedButton}" Click="CharacterButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="SaveGameButton_Town" Content="💾 Save/Load Game" Style="{StaticResource MaterialDesignRaisedButton}" Click="SaveGameButton_Town_Click"/>
                            <Separator Margin="0,20"/>
                            <TextBlock Text="NPCs" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,10"/>
                            <Button x:Name="AlchemistButton" Content="🧪 Alchemist" Style="{StaticResource MaterialDesignRaisedButton}" Click="AlchemistButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="BlacksmithButton" Content="⚒️ Blacksmith" Style="{StaticResource MaterialDesignRaisedButton}" Click="BlacksmithButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="EnchanterButton" Content="🔮 Enchanter" Style="{StaticResource MaterialDesignRaisedButton}" Click="EnchanterButton_Click"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
                <!-- Footer -->
                <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="8">
                    <TextBlock x:Name="FooterText" Text="Town of Arungard - Your adventure begins here!" Style="{DynamicResource MaterialDesignCaptionTextBlock}"/>
                </materialDesign:ColorZone>
            </Grid>
        </Grid>
    </Grid>
    </materialDesign:DialogHost>
</Window>