<Window x:Class="GodmistWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Godmist - RPG Adventure" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Game Button Style -->
        <Style x:Key="GameButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="MinHeight" Value="45"/>
        </Style>
        
        <!-- Game Text Block Style -->
        <Style x:Key="GameTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>
        
        <!-- Game List Box Style -->
        <Style x:Key="GameListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Godmist" 
                           Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="SaveButton" 
                            Content="Save" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Click="SaveButton_Click"
                            Visibility="{Binding IsGameStarted, Converter={StaticResource BoolToVis}}"/>
                    <Button x:Name="SaveManagerButton" 
                            Content="Save Management" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Click="SaveManagerButton_Click"/>
                    <Button x:Name="SettingsButton" 
                            Content="Settings" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Main Menu View -->
            <Grid x:Name="MainMenuView" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Title Section -->
                <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="GODMIST" 
                               Style="{DynamicResource MaterialDesignHeadline1TextBlock}"
                               HorizontalAlignment="Center"
                               Foreground="Purple"/>
                    <TextBlock Text="Epic RPG Adventure" 
                               Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
                
                <!-- Menu Buttons -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="NewGameButton" 
                            Content="New Game" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="NewGameButton_Click"/>
                    <Button x:Name="LoadGameButton" 
                            Content="Load Game" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="LoadGameButton_Click"/>
                    <Button x:Name="LanguageButton" 
                            Content="Language" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="LanguageButton_Click"/>
                    <Button x:Name="ExitButton" 
                            Content="Exit" 
                            Style="{StaticResource GameButtonStyle}"
                            Click="ExitButton_Click"/>
                </StackPanel>
                
                <!-- Footer -->
                <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Version 1.0" 
                               Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- Town View (integrated from TownDialog) -->
            <Grid x:Name="TownView" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Header -->
                <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="TownNameText" Text="Arungard" Style="{DynamicResource MaterialDesignHeadline4TextBlock}" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="PlayerGoldText" Text="Gold: 100" Style="{DynamicResource MaterialDesignBody1TextBlock}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>
                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <!-- Left Panel: Town Services -->
                    <materialDesign:Card Grid.Column="0" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Town Services" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>
                            <Button x:Name="StartExpeditionButton" Content="ðŸ° Start Expedition" Style="{StaticResource MaterialDesignRaisedButton}" Click="StartExpeditionButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="QuestLogButton" Content="ðŸ“œ Quest Log" Style="{StaticResource MaterialDesignRaisedButton}" Click="QuestLogButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="InventoryButton_Town" Content="ðŸŽ’ Inventory" Style="{StaticResource MaterialDesignRaisedButton}" Click="InventoryButton_Town_Click" Margin="0,0,0,10"/>
                            <Button x:Name="CharacterButton" Content="ðŸ‘¤ Character" Style="{StaticResource MaterialDesignRaisedButton}" Click="CharacterButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="SaveGameButton_Town" Content="ðŸ’¾ Save Game" Style="{StaticResource MaterialDesignRaisedButton}" Click="SaveGameButton_Town_Click"/>
                            <Separator Margin="0,20"/>
                            <TextBlock Text="NPCs" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,10"/>
                            <Button x:Name="AlchemistButton" Content="ðŸ§ª Alchemist" Style="{StaticResource MaterialDesignRaisedButton}" Click="AlchemistButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="BlacksmithButton" Content="âš’ï¸ Blacksmith" Style="{StaticResource MaterialDesignRaisedButton}" Click="BlacksmithButton_Click" Margin="0,0,0,10"/>
                            <Button x:Name="EnchanterButton" Content="ðŸ”® Enchanter" Style="{StaticResource MaterialDesignRaisedButton}" Click="EnchanterButton_Click"/>
                        </StackPanel>
                    </materialDesign:Card>
                    <!-- Center Panel: Town Info & Current NPC -->
                    <materialDesign:Card Grid.Column="1" Margin="10" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- Town Description -->
                            <TextBlock x:Name="TownDescriptionText" Grid.Row="0" Text="Welcome to Arungard, a bustling town where adventurers gather to trade, craft, and prepare for their next expedition. The town offers various services from skilled NPCs who can help you on your journey." Style="{DynamicResource MaterialDesignBody1TextBlock}" TextWrapping="Wrap" Margin="0,0,0,15"/>
                            <!-- Current NPC Panel -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="NPCPanel" Visibility="Collapsed">
                                    <TextBlock x:Name="NPCNameText" Style="{DynamicResource MaterialDesignHeadline5TextBlock}" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="NPCDialogueText" Style="{DynamicResource MaterialDesignBody1TextBlock}" TextWrapping="Wrap" Margin="0,0,0,15"/>
                                    <TextBlock x:Name="NPCLoyaltyText" Style="{DynamicResource MaterialDesignBody2TextBlock}" Margin="0,0,0,15"/>
                                    <StackPanel x:Name="NPCActionsPanel"/>
                                </StackPanel>
                            </ScrollViewer>
                            <!-- Status -->
                            <TextBlock x:Name="StatusText_Town" Grid.Row="2" Text="Ready" Style="{DynamicResource MaterialDesignCaptionTextBlock}" Margin="0,10,0,0"/>
                        </Grid>
                    </materialDesign:Card>
                    <!-- Right Panel: Available Dungeons -->
                    <materialDesign:Card Grid.Column="2" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Available Dungeons" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>
                            <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="DungeonsListBox" Style="{StaticResource MaterialDesignListBox}" SelectionChanged="DungeonsListBox_SelectionChanged"/>
                            </ScrollViewer>
                            <TextBlock x:Name="DungeonInfoText" Style="{DynamicResource MaterialDesignBody2TextBlock}" TextWrapping="Wrap" Margin="0,10,0,0"/>
                            <Button x:Name="EnterDungeonButton" Content="Enter Dungeon" Style="{StaticResource MaterialDesignRaisedButton}" Click="EnterDungeonButton_Click" Margin="0,10,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
                <!-- Footer -->
                <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="8">
                    <TextBlock x:Name="FooterText" Text="Town of Arungard - Your adventure begins here!" Style="{DynamicResource MaterialDesignCaptionTextBlock}"/>
                </materialDesign:ColorZone>
            </Grid>
        </Grid>
    </Grid>
</Window> 